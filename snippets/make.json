{
  "add": {
    "body": [
      "${1:out}: $1.o",
      "  \\$(CC) \\$(CFLAGS) -o $2"
    ],
    "prefix": "add"
  },
  "base": {
    "body": [
      ".PHONY: clean, mrproper",
      "CC = gcc",
      "CFLAGS = -g -Wall",
      "",
      "all: $1",
      "",
      "%.o: %.c",
      "  \\$(CC) \\$(CFLAGS) -c -o \\$@ \\$<",
      "",
      "${1:out}: $1.o",
      "  \\$(CC) \\$(CFLAGS) -o \\$@ \\$+",
      "",
      "clean:",
      "  rm -f *.o core.*",
      "",
      "mrproper: clean",
      "  rm -f $1"
    ],
    "prefix": "base"
  }
}
